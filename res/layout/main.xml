<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:padding="4dip" android:id="@+id/mainLayoutView">


		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:text="Convert: "
				android:layout_width="wrap_content" android:layout_gravity="center"
				android:layout_weight="4" />
			<EditText android:layout_height="wrap_content"
				android:layout_width="match_parent" android:id="@+id/inputNum1"
				android:inputType="numberDecimal" android:layout_weight="100"
				android:imeOptions="actionDone" />


		</LinearLayout>

		<Spinner android:id="@+id/Spinner01" android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:drawSelectorOnTop="true"
			android:prompt="@string/select_prompt" />
		<LinearLayout android:layout_height="wrap_content"
			android:layout_gravity="center" android:layout_width="match_parent">
			<TextView android:layout_height="wrap_content" android:text=" containing: "
				android:layout_width="wrap_content" android:id="@+id/textView1" />
			<EditText android:id="@+id/inputNum2" android:layout_height="wrap_content"
				android:text="5" android:layout_width="match_parent"
				android:inputType="numberDecimal" android:layout_weight="1"
				android:imeOptions="actionDone" />
			<TextView android:layout_height="wrap_content" android:text="% alcohol to:"
				android:layout_width="wrap_content" android:id="@+id/textView2" />
		</LinearLayout>

			<Spinner android:id="@+id/Spinner02" android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:drawSelectorOnTop="true"
				android:prompt="@string/select_prompt" />

	
		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_height="wrap_content" android:layout_gravity="center"
			android:layout_width="match_parent">
			<TextView android:layout_height="wrap_content" android:text=" containing: "
				android:layout_width="wrap_content" android:id="@+id/textView1" />
			<EditText android:id="@+id/inputNum3" android:layout_height="wrap_content"
				android:text="5" android:layout_width="match_parent"
				android:inputType="numberDecimal" android:layout_weight="1"
				android:imeOptions="actionDone" />
			<TextView android:layout_height="wrap_content" android:text="% alcohol"
				android:layout_width="wrap_content" android:id="@+id/TextView01" />
		</LinearLayout>
		<TextView android:id="@+id/SpinnerResult01" android:text="Result"
			android:textSize="10pt" android:textStyle="bold" android:gravity="center"
			android:layout_width="fill_parent" android:layout_height="100dip" />

		<TextView android:id="@+id/SpinnerResult02" android:gravity="center"
			android:layout_width="fill_parent" android:layout_height="100dip"
			android:textSize="8pt" android:text="Explanation" />


	</LinearLayout>

</ScrollView>